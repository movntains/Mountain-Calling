extends ../layout

block content
  .form-container
    h1 Create a New Resort

    form(action="/resorts", method="POST")
      .form-group
        label(for="name") Resort Name:
        input.form-control(type="text", name="name", placeholder="Resort name")
      .form-group
        label(for="price") Price:
        input.form-control(type="number", name="price", placeholder="Price", min="0.00", step="0.01")
      .form-group
        label(for="image") Image:
        input.form-control(type="text", name="image", placeholder="Image URL")
      .form-group
        label(for="description") Description:
        input.form-control(type="text", name="description", placeholder="Resort description")
      .form-group
        input.submit-button(type="submit", value="Submit")
      a.cancel-button(href="/resorts") Cancel